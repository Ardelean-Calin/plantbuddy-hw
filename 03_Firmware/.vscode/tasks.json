{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake_environment",
            "type": "shell",
            "command": "cmake -G \"MinGW Makefiles\" -DCMAKE_TOOLCHAIN_FILE=arm-none-eabi-gcc.cmake -DCMAKE_BUILD_TYPE=Debug -Bbuild -H. -DCMAKE_MAKE_PROGRAM=make",
            "problemMatcher": []
        },
        {
            "label": "build-debug",
            "dependsOn": [
                "cmake_environment"
            ],
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake .. && make",
            "problemMatcher": []
        },
        {
            "label": "build-clean",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "stop-openocd",
            "type": "shell",
            "windows": {
                "command": "pwsh.exe -c 'Stop-Process -Name \"openocd\" -Force'"
            }
        }
    ]
}