{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Debug)",
            "detail": "Builds the PlantBuddy Hex with debug information.",
            "type": "shell",
            "command": "make -j4",
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "detail": "Removes all build artifacts.",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "Rebuild (Debug)",
            "detail": "Rebuilds the PlantBuddy Hex with debug information after running the 'Clean' task.",
            "type": "shell",
            "dependsOn": [
                "Clean",
                "Build (Debug)"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Mass Erase",
            "detail": "Erases the nRF52810",
            "type": "shell",
            "command": "openocd -f ${workspaceFolder}/config/debugger/openocd.cfg -c init -c \"reset init\" -c halt -c \"nrf5 mass_erase\" -c\"exit\"",
            "problemMatcher": []
        },
        {
            "label": "Flash SoftDevice",
            "detail": "Flashes the S112 SoftDevice without erasing the memory first.",
            "type": "shell",
            "command": "openocd -f ${workspaceFolder}/config/debugger/openocd.cfg -c init -c \"reset init\" -c halt -c \"program ${workspaceFolder}/lib/nrf-sdk/components/softdevice/s112/hex/s112_nrf52_7.2.0_softdevice.hex verify reset exit\"",
            "problemMatcher": []
        },
        {
            "label": "Flash Bootloader",
            "detail": "Flashes the Secure Bootloader without erasing the memory first.",
            "type": "shell",
            "command": "openocd -f ${workspaceFolder}/config/debugger/openocd.cfg -c init -c \"reset init\" -c halt -c \"program ${workspaceFolder}/secure_bootloader/_build/bootloader.hex verify reset exit\"",
            "problemMatcher": []
        },
        {
            "label": "Reflash everything",
            "detail": "Flashes the Secure Bootloader and its settings, the S112 softdevice and our application.",
            "dependsOn": [
                "Rebuild (Debug)",
                "Bootloader (Rebuild)",
                "Mass Erase",
                "Flash App",
                "Flash SoftDevice",
                "Flash Bootloader",
                "Flash Bootloader Settings"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "Update Bootloader",
            "detail": "Flashes the Secure Bootloader and its settings.",
            "dependsOn": [
                "Bootloader (Rebuild)",
                "Flash Bootloader",
                "Flash Bootloader Settings"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "Build Bootloader Settings",
            "detail": "Creates the bootloader settings.",
            "type": "shell",
            "command": "nrfutil settings generate --family NRF52810 --application ${workspaceFolder}/_build/plant-buddy.hex --application-version 0 --bootloader-version 0 --bl-settings-version 1 ${workspaceFolder}/secure_bootloader/_build/bootloader_setting.hex",
            "problemMatcher": []
        },
        {
            "label": "Flash Bootloader Settings",
            "dependsOn": "Build Bootloader Settings",
            "detail": "Flashes the Secure Bootloader Settings without erasing the memory first.",
            "type": "shell",
            "command": "openocd -f ${workspaceFolder}/config/debugger/openocd.cfg -c init -c \"reset init\" -c halt -c \"program ${workspaceFolder}/secure_bootloader/_build/bootloader_setting.hex verify reset exit\"",
            "problemMatcher": []
        },
        {
            "label": "Flash App",
            "dependsOn": "Build (Debug)",
            "detail": "Flashes the Application Firmware",
            "type": "shell",
            "command": "openocd -f ${workspaceFolder}/config/debugger/openocd.cfg -c init -c \"reset init\" -c halt -c \"program ${workspaceFolder}/_build/plant-buddy.hex verify reset exit\"",
            "problemMatcher": []
        },
        {
            "label": "uECC (Link Library)",
            "detail": "Links the uECC library!",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/secure_bootloader/nrf52hf_armgcc/armgcc/"
            },
            "command": "make -j4",
            "problemMatcher": []
        },
        {
            "label": "Bootloader (Clean)",
            "detail": "Cleans the bootloader artifacts.",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/secure_bootloader/"
            },
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "Bootloader (Rebuild)",
            "detail": "Builds the OTA bootloader.",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/secure_bootloader/"
            },
            "dependsOn": [
                "uECC (Link Library)",
                "Bootloader (Clean)"
            ],
            "command": "make -j4",
            "problemMatcher": []
        },
        {
            "label": "Package DFU",
            "detail": "Create DFU Package",
            "type": "shell",
            "command": "nrfutil pkg generate --hw-version 52 --application-version ${input:AppVersion} --application _build/plant-buddy.hex --key-file secure_bootloader/private.key PlantBuddy_DFU.zip --sd-req 0x103",
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "AppVersion",
            "type": "promptString",
            "description": "Application version (default: 1)",
            "default": "1",
        },
        {
            "id": "HWVersion",
            "type": "promptString",
            "description": "Hardware version (default: 52)",
            "default": "52",
        },
    ]
}