{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Reset for debug",
            "detail": "Puts the Plantbuddy in a state where it can be debugged. The bootloader is deleted as it only works in release mode and the Softdevice is flashed.",
            "type": "shell",
            "dependsOn": [
                "Clean",
                "Mass Erase",
                "Flash SoftDevice"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Incremental Build",
            "detail": "Builds the PlantBuddy Hex with debug information.",
            "type": "shell",
            "command": "make -j12 DEBUG=1",
            "problemMatcher": []
        },
        {
            "label": "Release App",
            "detail": "Releases the software. Builds everything necessary, including bootloader and DFU package.",
            "type": "shell",
            "dependsOn": [
                "Clean"
            ],
            "command": [
                "make -j12 RELEASE=1",
                "&&",
                "pushd secure_bootloader/nrf52hf_armgcc/armgcc/ && make -j12 RELEASE=1 && popd && pushd secure_bootloader/ && make -j12", // Builds uECC and bootloader
                "&&",
                "popd && util/nrfutil-linux settings generate --family NRF52 --application ${workspaceRoot}/_build/plant-buddy.hex --application-version 0 --bootloader-version 0 --bl-settings-version 1 ${workspaceRoot}/secure_bootloader/_build/bootloader_settings.hex", // Generate bootloader settings
                "&&",
                "mergehex --merge ${workspaceRoot}/secure_bootloader/_build/bootloader.hex ${workspaceRoot}/secure_bootloader/_build/bootloader_settings.hex --output ${workspaceRoot}/secure_bootloader/_build/bootloader-with-settings.hex", // Merge bootloader hex
                "&&",
                "util/nrfutil-linux pkg generate --hw-version 52 --application-version ${input:AppVersion} --application ./_build/plant-buddy.hex --key-file secure_bootloader/private.key PlantBuddy_App_DFU_v${input:AppVersion}.zip --sd-req 0x126" // Generate DFU package
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "detail": "Removes all build artifacts from everywhere.",
            "type": "shell",
            "command": "make clean && pushd secure_bootloader && make clean && pushd nrf52hf_armgcc/armgcc/ && make clean",
            "problemMatcher": []
        },
        {
            "label": "Rebuild",
            "detail": "Rebuilds the PlantBuddy Hex with debug information after running the 'Clean' task.",
            "type": "shell",
            "dependsOn": [
                "Clean",
                "Incremental Build"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Reset",
            "detail": "Reset the nRF52 so that it no longer is in programming mode.",
            "type": "shell",
            "command": "nrfjprog -f nrf52 --reset",
            "problemMatcher": []
        },
        {
            "label": "Mass Erase",
            "detail": "Erases the nrf52832",
            "type": "shell",
            "command": "nrfjprog -f nrf52 --eraseall",
            // "command": "openocd -f ${workspaceRoot}/config/debugger/openocd.cfg -c init -c \"reset init\" -c halt -c \"nrf5 mass_erase\" -c\"exit\"",
            "problemMatcher": []
        },
        {
            "label": "Flash SoftDevice",
            "detail": "Flashes the S112 SoftDevice without erasing the memory first.",
            "type": "shell",
            "command": "nrfjprog -f nrf52 --program ${workspaceRoot}/lib/nrf-sdk/components/softdevice/s112/hex/s112_nrf52_7.3.0_softdevice.hex --sectorerase && nrfjprog -f nrf52 --reset",
            // "command": "nrfjprog -f nrf52 --program ${workspaceRoot}/lib/nrf-sdk/components/softdevice/s112/hex/s112_nrf52_7.3.0_softdevice.hex --sectorerase && nrfjprog -f nrf52 --reset",
            "problemMatcher": []
        },
        {
            "label": "Flash Bootloader",
            "detail": "Flashes the Secure Bootloader without erasing the memory first.",
            "type": "shell",
            "command": "nrfjprog -f nrf52 --program ${workspaceRoot}/secure_bootloader/_build/bootloader.hex --sectorerase && nrfjprog -f nrf52 --reset",
            // "command": "openocd -f ${workspaceRoot}/config/debugger/openocd.cfg -c init -c \"reset init\" -c halt -c \"program ${workspaceRoot}/secure_bootloader/_build/bootloader.hex verify reset exit\"",
            "problemMatcher": []
        },
        {
            "label": "Reflash everything",
            "detail": "Flashes the Secure Bootloader and its settings, the S112 softdevice and our application.",
            "dependsOn": [
                "Flash SoftDevice",
                "Flash Bootloader",
                "Flash Bootloader Settings"
            ],
            "dependsOrder": "sequence",
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "Package DFU (Bootloader)",
            "detail": "Create DFU Package for Application and Bootloader",
            "type": "shell",
            "dependsOn": [
                "Merge Bootloader + Settings",
                "Package DFU (App)"
            ],
            "dependsOrder": "sequence",
            "command": "util/nrfutil-linux pkg generate --hw-version 52 --bootloader-version ${input:BootloaderVersion} --bootloader ./secure_bootloader/_build/bootloader-with-settings.hex --key-file secure_bootloader/private.key PlantBuddy_Bootloader_DFU.zip --sd-req 0x126",
            "problemMatcher": []
        },
        {
            "label": "DFU - Generate Private/Public Keys",
            "detail": "Generates the private and public keys used by the bootloader.",
            "type": "shell",
            "command": [
                "util/nrfutil-linux keys generate ${workspaceRoot}/secure_bootloader/private.key && util/nrfutil-linux keys display --key pk --format code ${workspaceRoot}/secure_bootloader/private.key --out_file ${workspaceRoot}/secure_bootloader/public_key.c"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "AppVersion",
            "type": "promptString",
            "description": "Application version (default: 1)",
            "default": "1",
        },
        {
            "id": "BootloaderVersion",
            "type": "promptString",
            "description": "Bootloader version (default: 1)",
            "default": "1",
        },
        {
            "id": "HWVersion",
            "type": "promptString",
            "description": "Hardware version (default: 52)",
            "default": "52",
        },
    ]
}