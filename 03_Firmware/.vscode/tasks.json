{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Debug)",
            "detail": "Builds the PlantBuddy Hex with debug information.",
            "type": "shell",
            "command": "make -j4",
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "detail": "Removes all build artifacts.",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "Rebuild (Debug)",
            "detail": "Rebuilds the PlantBuddy Hex with debug information after running the 'Clean' task.",
            "type": "shell",
            "dependsOn": [
                "Clean",
                "Build (Debug)"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Flash SoftDevice (With Erase)",
            "detail": "Flashes the S112 SoftDevice.",
            "type": "shell",
            "command": "openocd -f ${workspaceFolder}/config/debugger/openocd.cfg -c init -c \"reset init\" -c halt -c \"nrf5 mass_erase\" -c \"program ${workspaceFolder}/lib/nrf-sdk/components/softdevice/s112/hex/s112_nrf52_7.2.0_softdevice.hex verify reset exit\"",
            "problemMatcher": []
        },
        {
            "label": "Flash SoftDevice (No Erase)",
            "detail": "Flashes the S112 SoftDevice without erasing the memory first.",
            "type": "shell",
            "command": "openocd -f ${workspaceFolder}/config/debugger/openocd.cfg -c init -c \"reset init\" -c halt -c \"program ${workspaceFolder}/lib/nrf-sdk/components/softdevice/s112/hex/s112_nrf52_7.2.0_softdevice.hex verify reset exit\"",
            "problemMatcher": []
        },
        {
            "label": "Flash Bootloader (With Erase)",
            "detail": "Flashes the Secure Bootloader without erasing the memory first.",
            "type": "shell",
            "command": "openocd -f ${workspaceFolder}/config/debugger/openocd.cfg -c init -c \"reset init\" -c halt -c \"nrf5 mass_erase\" -c \"program ${workspaceFolder}/secure_bootloader/_build/bootloader.hex verify reset exit\"",
            "problemMatcher": []
        },
        {
            "label": "Flash Bootloader (No Erase)",
            "detail": "Flashes the Secure Bootloader without erasing the memory first.",
            "type": "shell",
            "command": "openocd -f ${workspaceFolder}/config/debugger/openocd.cfg -c init -c \"reset init\" -c halt -c \"program ${workspaceFolder}/secure_bootloader/_build/bootloader.hex verify reset exit\"",
            "problemMatcher": []
        },
        {
            "label": "uECC (Link Library)",
            "detail": "Links the uECC library!",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/secure_bootloader/nrf52hf_armgcc/armgcc/"
            },
            "command": "make -j4",
            "problemMatcher": []
        },
        {
            "label": "Bootloader (Clean)",
            "detail": "Cleans the bootloader artifacts.",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/secure_bootloader/"
            },
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "Bootloader (Rebuild)",
            "detail": "Builds the OTA bootloader.",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/secure_bootloader/"
            },
            "dependsOn": [
                "uECC (Link Library)",
                "Bootloader (Clean)"
            ],
            "command": "make -j4",
            "problemMatcher": []
        },
    ]
}